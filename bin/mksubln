#!/bin/bash
echo "playlist"
read playlist
echo "subtitle extension:"
read ext
# extract a string at end of line after specific word(/)
cat /home/paseu/Videos/$playlist|grep '/'|grep -o '[^/]*$' > newname.txt
find $(pwd)/ -maxdepth 1 -type f ! -name \*.txt > oldname.txt
while read oldname <&3 && read newname <&4
do
     ln -s "$oldname" ../../"$newname".$ext
done 3<oldname.txt 4<newname.txt
